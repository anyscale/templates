    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",          // Runs the current open Python file
            "console": "integratedTerminal", // Use VS Code's built-in terminal
